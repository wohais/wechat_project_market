/* pages/detail/detail.wxss */
page{
  background-color: #dbdbdb;
}
.detail_image{
  background-color: white;
}
.detail_image image {
  width: 100%;
  height: 400rpx;
}
.detail_card_1{
  background-color: white;
}
.detail_card_1 .detail_price {
  padding: 25rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: red;
}
.detail_card_1 .detail_name_row {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.detail_card_1 .detail_name_row .detail_name {
  display: -webkit-box;
  overflow: hidden;
  color: #000;
  font-weight: 900;
  font-size: 40rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.detail_card_1 .tool{
  padding-right: 50rpx;
}
.detail_card_1 .tool_but{
  width: 100px;
  height: 40px;
  float: right;
  background:#ffa500;
  border-radius: 20%;
  text-align: center;
  line-height: 40px;
  box-sizing: border-box;
  box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);
}
.btm_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 20%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btm_cart {
  flex: 2.5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: var(--themeColor);
}
.btm_tool .btm_buy {
  flex: 2.5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: #ffa500;
}
.detail_card_2{
  background-color: white;
  margin-top: 30rpx;
}
.detail_card_2 .detail_text{
  padding: 25rpx;
  font-size: 35rpx;
  font-weight: 500;
  color: red;
  text-align: center;
}
.detail_card_2 image{
  width: 100%;
}
/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
